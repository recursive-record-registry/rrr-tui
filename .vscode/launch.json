        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rrr-tui'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rrr-tui",
                    "--package=rrr-tui",
                    "--features=debug"
                ],
                "filter": {
                    "name": "rrr-tui",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                "LOG_FILE": "rrr_tui.LOCAL.log",
                "RUST_LOG": "rrr_tui=trace",
                "RUST_BACKTRACE": "1"
            },
            //"cwd": "${workspaceFolder}"
            "cwd": "${workspaceFolder}/../rrr-make/target/tmp/test-registry/target/staging"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rrr-tui-3'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rrr-tui-3",
                    "--package=rrr-tui-3"
                ],
                "filter": {
                    "name": "rrr-tui-3",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                "LOG_FILE": "rrr_tui.LOCAL.log",
                "RUST_BACKTRACE": "1"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}
